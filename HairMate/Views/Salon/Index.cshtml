@model HairMate.Application.ViewModels.Salon.ListSalonForListVm

@{
    ViewData["Title"] = "Lista Salonów";
}

<h1>Lista Salonów</h1>

<form asp-action="Index" asp-controller="Salon" method="post">
    <div class="input-group">
        <input type="text" asp-for="SearchString" class="form-control rounded" placeholder="Type Title or Director" aria-label="Search" aria-describedby="search-addon" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Logo</th>
                <th>Typ</th>
                <th>Miasto</th>
                <th>Ulica</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Salons)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SalonId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.LogoUrl)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.Street)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SalonId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SalonId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SalonId }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <table>
        <tr>
            @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
            {
                <td>
                    @if (i != Model.CurrentPage)
                    {
                        <a class="page-link" href="javascript:PagerClick(@i)">@i</a>
                    }
                    else
                    {
                        <a class="page-link">@i</a>
                    }
                </td>
            }
        </tr>
    </table>
    <input type="hidden" name="pageNo" id="pageNo" />
    <input type="hidden" name="pageSize" id="pageSize" value="5" />
</form>

@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index) {
            document.getElementById("pageNo").value = index;
            document.forms[0].submit();
        }
    </script>
}
